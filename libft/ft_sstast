#include "libft.h"
#include <stdio.h>

char				*ft_strtrim(char const *s)
{
	char			*str;
	size_t			i;

	i = 0;
	str = (char *)malloc((ft_strlen(s) + 1));
	printf("%lu", ft_strlen(s));
	if (str == NULL)
		return (NULL);
	while (*s)
	{
	   	if (s[i] != ' ' || s[i] != '\n' || s[i] != '\t')
			str[i++] = *s;
		s++;
	}
	str[i] = '\0';
	return (str);
}
